doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title REBO
  link(href='https://fonts.googleapis.com/css?family=Open+Sans&display=swap', rel='stylesheet')
  link(rel='stylesheet', href='/css/style.css')
  script(src='/img/icon/fontawesome.min.js') 
  link(rel='stylesheet', href='/Alert/sweetalert2.min.css')
  style.
    body {
    background-color: rgb(241, 241, 241);
    }
    .account {
    background-color: white;
    position: relative;
    margin: 7em auto;
    width: 500px;
    height: 250px;
    border-radius: 10px;
    }
    .account > .avatar {
    position: relative;
    top: 10px;
    width: 100px;
    height: 100px;
    background-color: rgb(255, 0, 0);
    border-radius: 100%;
    margin: 20px auto;
    }
    p {
    text-align: center;
    margin-bottom: 10px;
    }
    .center {
    color: gray;
    display: flex;
    justify-content: center;
    }
    .account-setting {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 50px;
    height: 25px;
    text-align: end;
    }
    .nav {
    position: absolute;
    top: 35px;
    right: 10px;
    width: auto;
    height: 70px;
    display: none;
    border: 1px solid gray;
    background-color: white;
    }
    .account-setting:hover ~ .nav {
    display: block;
    }
    .nav:hover {
    display: block;
    }
    .account-setting > i {
    font-size: 20px;
    color: rgb(0, 0, 0);
    }
    .account-setting > i:hover {
    color: rgb(0, 0, 0);
    }
    .fas {
    line-height: 25px;
    }
    li {
    padding: 5px;
    }
    li:hover {
    background-color: gray;
    }
    .nav > li,
    label {
    cursor: pointer;
    }
    .nav > label {
    min-width: 211px;
    height: 100%;
    }
    ul {
    list-style: none;
    margin-top: 5px;
    }
    .nav,
    ul {
    border-radius: 10px;
    }
    .bgr_overlay1 {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.3);
    display: none;
    animation: fadein linear 0.1s;
    }
    .check-edit:checked ~ .bgr_overlay {
    display: block;
    }
    .check-change:checked ~ .bgr_overlay1 {
    display: block;
    }
    .selected-edit-account,
    .selected-change-account {
    background-color: rgb(255, 255, 255);
    position: absolute;
    margin: auto;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    display: none;
    }
    .selected-edit-account,.selected-change-account {
    width: 600px;
    height: 500px;
    }
    .check-edit:checked ~ .selected-edit-account {
    display: block;
    }
    .check-change:checked ~ .selected-change-account {
    display: block;
    }
    .selected-edit-account--header {
    display: flex;
    }
    .ava {
    width: 60px;
    height: 60px;
    background-color: aqua;
    border-radius: 100%;
    }
    .line1 {
    display: flex;
    }
    .selected-edit-account--form
     {
    width: inherit;
    height: 420px;
    }
    .form-edit {
    margin: 10px;
    width: 60%;
    height: auto;
    }
    .input > label {
    font-weight: bolder;
    }
    .input {
    border: none;
    }
    .txt {
    padding: 10px;
    border: none;
    background-color: #cccccc;
    border-radius: 10px;
    }
    .txt:hover {
    background-color: #ffffff;
    border: 3px solid rgba(255, 0, 0, 0.349);
    }
    .btn {
    margin: 0;
    border-radius: 10px;
    width: 20%;
    position: absolute;
    right: 10px;
    }
    .save {
    margin-top: 30px;
    left: 30px;
    }
section.bar
